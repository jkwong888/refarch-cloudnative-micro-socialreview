{
    "$schema": "http://json-schema.org/draft-04/schema#",
    "title": "Social Review Microservice Toolchain Deployment to Bluemix",
    "description": "social review microservice toolchain",
    "longDescription": "Information entered here will be used at deployment time.",
    "type": "object",
    "properties": {
        "deploy-region": {
            "description": "Deploy to this Bluemix Region",
            "type": "string"
        },
        "deploy-org": {
            "description": "Deploy to this Bluemix Organization",
            "type": "string"
        },
        "deploy-space": {
            "description": "Deploy to this space",
            "type": "string"
        },
        "openwhisk-api-endpoint": {
            "description": "OpenWhisk API endpoint",
            "type": "string"
        },
        "bxlogin-api-endpoint": {
            "description": "Bluemix Login API endpoint",
            "type": "string"
        }
    },
    "required": [
        "deploy-region",
        "deploy-org",
        "deploy-space",
        "bxlogin-api-endpoint",
        "openwhisk-api-endpoint"
    ],
    "form": [
        {
            "type": "validator",
            "url": "/devops/setup/bm-helper/helper.html"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "OpenWhisk API Endpoint",
            "key": "openwhisk-api-endpoint"
        },
        {
            "type": "text",
            "readonly": false,
            "title": "Bluemix Login API Endpoint",
            "key": "bxlogin-api-endpoint"
        },
        {
            "type": "table",
            "columnCount": 4,
            "widths": ["15%", "28%", "28%", "28%"],
            "items": [
                {
                    "type": "label",
                    "title": ""
                },
                {
                    "type": "label",
                    "title": "Region"
                },
                {
                    "type": "label",
                    "title": "Organization"
                },
                {
                    "type": "label",
                    "title": "Space"
                },
                {
                    "type": "label",
                    "title": "Deploy to"
                },
                {
                    "type": "select",
                    "key": "deploy-region"
                },
                {
                    "type": "select",
                    "key": "deploy-org"
                },
                {
                    "type": "select",
                    "key": "deploy-space",
                    "readonly": false
                }
            ]
        }
    ]
}
